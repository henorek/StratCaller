<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#6c6976"
    tools:context=".RoundActivity"
    android:paddingBottom="25.0dip">

    <LinearLayout
        android:id="@+id/warmup_text_layout"
        android:orientation="vertical"
        android:background="#252323"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="top"
        >

        <com.example.jarek.stratcaller.TextViewPlus
            android:text="#1 Round"
            android:textSize="23sp"
            android:id="@+id/round_text"
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="match_parent"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/score_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/warmup_text_layout"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/score_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:text="0 - 0"
            android:paddingTop="15.0dip"
            android:paddingBottom="15.0dip"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/current_map_text_layout"
        android:orientation="vertical"
        android:background="#252323"
        android:paddingTop="5.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="top"
        android:layout_below="@id/score_layout">

        <com.example.jarek.stratcaller.TextViewPlus
            android:text="Strategy"
            android:textSize="23sp"
            android:id="@+id/current_map_text"
            android:gravity="center"
            android:layout_below="@id/warmup_text_layout"
            android:layout_width="match_parent" android:layout_height="match_parent"/>



    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tactic_layout"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_below="@id/current_map_text_layout"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/tactic_title_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="22sp"
            android:text="SampleTitle"
            android:paddingTop="15.0dip"
            android:paddingBottom="15.0dip"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tactic_title_text">

            <TextView
                android:id="@+id/tactic_description_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:text="SampleDescription SampleDescription\nSampleDescription SampleDescription\nSampleDescription SampleDescription\nSampleDescription SampleDescription\nSampleDescription SampleDescription\nSampleDescription SampleDescription\nSampleDescription SampleDescription\nSampleDescription SampleDescription\nSampleDescription SampleDescription\nSampleDescription SampleDescription\nSampleDescription SampleDescription\nSampleDescription SampleDescription\nSampleDescription SampleDescription\nSampleDescription SampleDescription\nSampleDescription SampleDescription\nSampleDescription SampleDescription\n"
                android:paddingBottom="15.0dip"
                />

        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/round_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:paddingLeft="25.0dip"
        android:paddingRight="25.0dip"
        android:gravity="bottom"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:showDividers="middle"
            android:divider="@drawable/empty_tall_divider"
            android:layout_width="fill_parent" android:layout_height="wrap_content">

            <com.example.jarek.stratcaller.ButtonPlus
                android:id="@+id/ct"
                android:background="@drawable/green_button"
                android:layout_width="0.0dip" android:layout_height="50.0dip"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:text="CT"
                android:layout_weight="1.0" />

            <com.example.jarek.stratcaller.ButtonPlus
                android:id="@+id/tt"
                android:background="@drawable/green_button"
                android:layout_width="0.0dip" android:layout_height="50.0dip"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:text="TT"
                android:layout_weight="1.0" />

        </LinearLayout>

</RelativeLayout>
</RelativeLayout>