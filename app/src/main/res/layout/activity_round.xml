<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#6c6976"
    tools:context=".RoundActivity" >

    <LinearLayout
        android:id="@+id/warmup_text_layout"
        android:orientation="vertical"
        android:background="#252323"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="top"
        >

        <com.example.jarek.stratcaller.widgets.TextViewPlus
            android:text="@string/starterScore"
            android:textSize="23sp"
            android:id="@+id/score_text"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent" android:layout_height="match_parent"/>

    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/warmup_text_layout"
        android:layout_margin="10dp"
        android:divider="@drawable/empty_tall_divider"
        android:dividerHeight="10dp"/>

</RelativeLayout>