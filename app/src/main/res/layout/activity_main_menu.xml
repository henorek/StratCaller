<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6c6976"
    tools:context=".ChooseMapActivity">

    <LinearLayout
        android:id="@+id/logo_layout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:paddingTop="25.0dip"
        android:paddingLeft="25.0dip"
        android:paddingRight="25.0dip"
        android:paddingBottom="0.0dip"
        >

        <ImageView
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:src="@drawable/logo_sc_mid"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/logo" />

        </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_menu_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_layout"
        android:layout_centerHorizontal="true"
        android:paddingTop="25.0dip"
        android:paddingLeft="25.0dip"
        android:paddingRight="25.0dip">

        <com.example.jarek.stratcaller.widgets.ButtonPlus
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:text="@string/NewMatchButtonText"
            android:background="@drawable/grey_button"
            android:id="@+id/new_match_button"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            />

        <com.example.jarek.stratcaller.widgets.ButtonPlus
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:text="@string/PreviousMatchesButtonText"
            android:background="@drawable/grey_button"
            android:id="@+id/prev_match_button"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/new_match_button"/>

        <com.example.jarek.stratcaller.widgets.ButtonPlus
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:text="@string/TrainingButtonText"
            android:background="@drawable/grey_button"
            android:id="@+id/training_button"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/prev_match_button"
            android:clickable="false"/>

        <com.example.jarek.stratcaller.widgets.ButtonPlus
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:text="@string/SettingsButtonText"
            android:background="@drawable/grey_button"
            android:id="@+id/settings_button"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/training_button"
            android:clickable="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView"
            android:layout_above="@+id/new_match_button"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>



