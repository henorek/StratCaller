<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="#6c6976"
    tools:context="com.example.jarek.stratcaller.activities.WarumupActivity"
    android:paddingBottom="25.0dip">


    <LinearLayout
        android:id="@+id/warmup_text_layout"
        android:orientation="vertical"
        android:background="#252323"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="top"
        >

        <com.example.jarek.stratcaller.widgets.TextViewPlus
            android:text="@string/WarmupText"
            android:textSize="23sp"
            android:id="@+id/warmup_text"
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="match_parent"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/info_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/warmup_text_layout"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        >

        <com.example.jarek.stratcaller.widgets.TextViewPlus
            android:id="@+id/info_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17sp"
            android:text="@string/WarumupDescription"
            android:paddingTop="15.0dip"
            android:paddingBottom="15.0dip"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/current_map_text_layout"
        android:orientation="vertical"
        android:background="#252323"
        android:paddingTop="5.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="top"
        android:layout_below="@id/info_text_layout">

        <com.example.jarek.stratcaller.widgets.TextViewPlus
            android:text="@string/CurrentMapText"
            android:textSize="23sp"
            android:id="@+id/current_map_text"
            android:gravity="center"
            android:layout_below="@id/warmup_text_layout"
            android:layout_width="match_parent" android:layout_height="match_parent"/>



    </LinearLayout>

    <RelativeLayout
        android:id="@+id/map_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/current_map_text_layout"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:paddingLeft="25.0dip"
        android:paddingRight="25.0dip"
        android:paddingTop="15.0dip"
        android:paddingBottom="25.0dip"
        >

        <com.example.jarek.stratcaller.widgets.ZoomableImageView
            android:id="@+id/minimap"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView2"
            android:layout_below="@+id/minimap"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/start_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:paddingLeft="25.0dip"
        android:paddingRight="25.0dip"
        android:gravity="bottom">

        <com.example.jarek.stratcaller.widgets.ButtonPlus
            android:id="@+id/start_buton"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:text="@string/StartButtonText"
            android:background="@drawable/green_button"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            />


    </RelativeLayout>

</RelativeLayout>

