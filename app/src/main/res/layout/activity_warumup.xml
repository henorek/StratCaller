<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#6c6976"
    tools:context="com.example.jarek.stratcaller.WarumupActivity"
    android:paddingBottom="25.0dip">


    <LinearLayout
        android:id="@+id/warmup_text_layout"
        android:orientation="vertical"
        android:background="#252323"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="top"
        >

        <com.example.jarek.stratcaller.TextViewPlus
            android:text="Warmup"
            android:textSize="23sp"
            android:id="@+id/warmup_text"
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="match_parent" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/info_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/warmup_text_layout"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        >

        <com.example.jarek.stratcaller.TextViewPlus
            android:id="@+id/info_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17sp"
            android:text="Prepare for match and press Start button\nwhen in-game countdown timer runs out."
            android:paddingTop="25.0dip"
            android:paddingBottom="25.0dip"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/current_map_text_layout"
        android:orientation="vertical"
        android:background="#252323"
        android:paddingTop="5.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="top"
        android:layout_below="@id/info_text_layout"
        >

        <com.example.jarek.stratcaller.TextViewPlus
            android:text="Current map"
            android:textSize="23sp"
            android:id="@+id/current_map_text"
            android:gravity="center"
            android:layout_below="@id/warmup_text_layout"
            android:layout_width="match_parent" android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="25.0dip"
            android:paddingBottom="25.0dip"
            android:layout_below="@id/current_map_text"
            android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/minimap_warmup"
            android:paddingTop="25.0dip"
            android:paddingLeft="25.0dip"
            android:paddingRight="25.0dip"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cache_minimap"
            android:contentDescription="miniap" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        >
        

        <com.example.jarek.stratcaller.ButtonPlus
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:text="Start"
            android:background="@drawable/green_button"
            android:id="@+id/start_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>

    </RelativeLayout>


</RelativeLayout>