<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6c6976"
    tools:context=".ChooseSideActivity">

    <LinearLayout
        android:id="@+id/textlayout"
        android:orientation="horizontal"
        android:background="#252323"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="top">

        <TextView
            android:text="Select side"
            android:textSize="21sp"
            android:id="@+id/choose_side_text"
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="match_parent" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/buttons2layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textlayout"
        android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/row_01"
                    android:orientation="horizontal"
                    android:paddingLeft="25.0dip"
                    android:paddingTop="25.0dip"
                    android:paddingRight="25.0dip"
                    android:paddingBottom="25.0dip"
                    android:showDividers="middle"
                    android:layout_centerHorizontal="true"
                    android:divider="@drawable/empty_tall_divider"
                    android:layout_width="wrap_content" android:layout_height="wrap_content">

                    <Button style="?android:attr/buttonBarButtonStyle"
                        android:id="@+id/ct_side"
                        android:layout_width="fill_parent" android:layout_height="wrap_content"
                        android:background="@drawable/ct_cutom_button"
                        android:layout_weight="1.0" />

                    <Button style="?android:attr/buttonBarButtonStyle"
                        android:id="@+id/tt_side"
                        android:layout_width="fill_parent" android:layout_height="wrap_content"
                        android:background="@drawable/tt_cutom_button"
                        android:layout_weight="1.0"/>

                </LinearLayout>

            </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/text2layout"
        android:orientation="horizontal"
        android:background="#252323"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="top"
        android:layout_below="@id/buttons2layout">

        <TextView
            android:text="Current map"
            android:textSize="21sp"
            android:id="@+id/tips_text"
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>